<mvc:View controllerName="de.marianzeis.githubfollower.controller.Main" displayBlock="true"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<!-- <MessagePage title="{i18n>appTitle}" text="{i18n>appTitle}" icon="sap-icon://feed" id="page" description="{i18n>appDescription}">
		<buttons> <Button text="Generate OPML from GitHub Following" press=".createAndDownloadOPMLFile" busyIndicatorDelay="50" busy="{data>/busyOPMLButton}" />
		</buttons>
	</MessagePage> -->
	<Page title="Following to RSS" titleAlignment="Center" showNavButton="false">
		<headerContent>
			<!-- <Button icon="sap-icon://action" tooltip="Share" /> -->
		</headerContent>
		<subHeader>
			<OverflowToolbar>
				<!-- <SearchField /> -->
			</OverflowToolbar>
		</subHeader>
		<content>

			<VBox height="100%" justifyContent="Center" alignItems="Center">
				<core:Icon src="sap-icon://feed" color="#EF8021" size="150px" height="250px">

				</core:Icon>
				<FlexBox direction="Row" width="700px" alignItems="Start" class="sapUiTinyMarginBottom">
					<Label text="GitHub Username" width="200px">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Label>
					<Input id="gitHubUsernameInput" width="200px"
						value="{
							path : 'data>/gitHubUsername',
							type : 'sap.ui.model.type.String',
							constraints : {
								minLength: 1
							}
						}"
						>
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Input>
					<Button text="Load GitHub Data" width="300px" press="loadGitHubData" busyIndicatorDelay="50" busy="{data>/busyGitHubButton}" type="{data>/typeGitHubButton}">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Button>
				</FlexBox>
				<FlexBox direction="Row" width="700px" alignItems="Start" class="sapUiTinyMarginBottom">
					<Label text="SAP Community Username" width="200px">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Label>
					<Input id="SAPCommunityUsernameInput" width="200px"
						value="{
							path : 'data>/SAPCommunityUsername',
							type : 'sap.ui.model.type.String',
							constraints : {
								minLength: 1
							}
						}"
						>
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Input>
					<Button text="Load SAP Community Data" width="300px" press="loadSAPData" busyIndicatorDelay="50" busy="{data>/busySAPButton}" type="{data>/typeSAPButton}">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Button>
				</FlexBox>
				<Button text="Generate and Download OPML File" width="300px" press="opml" busyIndicatorDelay="50" busy="{data>/busyOPMLButton}" enabled="{data>/OPMLButtonEnabled}">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<!-- <Button text="Accept" type="Accept" />
			<Button text="Reject" type="Reject" />
			<Button text="Edit" />
			<Button text="Delete" /> -->
			</OverflowToolbar>
		</footer>
	</Page>

</mvc:View>