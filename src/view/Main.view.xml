<mvc:View controllerName="de.marianzeis.githubfollower.controller.Main" displayBlock="true"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page title="SAP RSS Feeds Generator" titleAlignment="Center" showNavButton="false">
		<headerContent>
			<!-- <Button icon="sap-icon://action" tooltip="Share" /> -->
		</headerContent>
		<subHeader>
			<OverflowToolbar>
				<!-- <SearchField /> -->
			</OverflowToolbar>
		</subHeader>
		<content>

			<VBox height="100%" justifyContent="Center" alignItems="Center">
				<core:Icon src="sap-icon://feed" color="#EF8021" size="150px" height="250px">

				</core:Icon>
				<FlexBox direction="Row" alignItems="Center" class="sapUiTinyMarginBottom">
					<Label text="GitHub Username" textAlign="Center">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0" />
						</layoutData>
					</Label>
					<Input id="gitHubUsernameInput"  width="100%" value="{
							path : 'data>/gitHubUsername',
							type : 'sap.ui.model.type.String',
							constraints : {
								minLength: 1
							}
						}">
						<layoutData>
							<FlexItemData growFactor="2" baseSize="0" />
						</layoutData>
					</Input>
					<Button text="Load GitHub Data" press="loadGitHubData" busyIndicatorDelay="50" busy="{data>/busyGitHubButton}" type="{data>/typeGitHubButton}" width="100%">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0" />
						</layoutData>
					</Button>
				</FlexBox>
				<FlexBox direction="Row" alignItems="Center" class="sapUiTinyMarginBottom">
					<Label text="SAP Community Username" wrapping="true"  textAlign="Center">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0" />
						</layoutData>
					</Label>
					<Input id="SAPCommunityUsernameInput"  width="100%" value="{
							path : 'data>/SAPCommunityUsername',
							type : 'sap.ui.model.type.String',
							constraints : {
								minLength: 1
							}
						}">
						<layoutData>
							<FlexItemData growFactor="2" baseSize="0" />
						</layoutData>
					</Input>
					<Button text="Load SAP Data" press="loadSAPData" busyIndicatorDelay="50" busy="{data>/busySAPButton}" type="{data>/typeSAPButton}" width="100%">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0" />
						</layoutData>
					</Button>
				</FlexBox>
				<FlexBox direction="Row" alignItems="Center" class="sapUiTinyMarginBottom">
					<Label text="SAP Blogs Tags" wrapping="true">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0"  />
						</layoutData>
					</Label>
					<MultiInput id="multiInput" suggestionItems="{
									path: 'tags>/',
									sorter: { path: 'count', descending: true}
								}" valueHelpRequest="handleValueHelp" tokenUpdate="onTokenUpdate">
						<core:Item key="{tags>tag}" text="{tags>title}" />
							<layoutData>
								<FlexItemData growFactor="2" baseSize="0"  />
							</layoutData>
					</MultiInput>
					<ObjectStatus class="sapUiSmallMarginBottom" text="sorted by relevance" icon="sap-icon://information" state="Information">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0"  />
						</layoutData>
					</ObjectStatus>
				</FlexBox>
				<FlexBox direction="Row" alignItems="Center" class="sapUiTinyMarginBottom">
					<Label text="SAP Groups" wrapping="true">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0"  />
						</layoutData>
					</Label>
					<MultiInput id="multiInputGroup" suggestionItems="{
						path: 'groups>/',
						sorter: { path: 'count', descending: true}
					}" valueHelpRequest="handleValueHelpGroup" tokenUpdate="onTokenUpdateGroup">
						<core:Item key="{groups>tag}" text="{groups>title}" />
							<layoutData>
								<FlexItemData growFactor="2" baseSize="0"  />
							</layoutData>
					</MultiInput>
				</FlexBox>
				<FlexBox direction="Row" alignItems="Center" class="sapUiTinyMarginBottom">
					<CheckBox id="SAPEventCheckbox" text="SAP Group Events" select="onCheckboxSelected" />
					<Link
				text="Open Group Events"
				target="_blank"
				href="https://groups.community.sap.com/t5/events/ct-p/events" />
				</FlexBox>
				<FlexBox direction="Row" alignItems="Center" class="sapUiTinyMarginBottom">
					<Label text="SAP Youtube Channels" wrapping="true">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0"  />
						</layoutData>
					</Label>
					<MultiInput id="multiInputYoutube" suggestionItems="{
									path: 'youtube>/'
								}" valueHelpRequest="handleValueHelpYoutube" tokenUpdate="onTokenUpdateYoutube">
						<core:Item key="{youtube>id}" text="{youtube>title}" />
							<layoutData>
								<FlexItemData growFactor="2" baseSize="0"  />
							</layoutData>
					</MultiInput>
				</FlexBox>
				<FlexBox direction="Row" alignItems="Center" class="sapUiTinyMarginBottom">
					<Label text="SAP Podcasts" wrapping="true">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0"  />
						</layoutData>
					</Label>
					<MultiInput id="multiInputSAPPodcasts" suggestionItems="{
									path: 'sap-podcasts>/'
								}" valueHelpRequest="handleValueHelpSAPPodcasts" tokenUpdate="onTokenUpdateSAPPodcasts">
						<core:Item key="{sap-podcasts>key}" text="{sap-podcasts>title}" />
							<layoutData>
								<FlexItemData growFactor="2" baseSize="0"  />
							</layoutData>
					</MultiInput>
				</FlexBox>
				<Button text="Generate and Download OPML File" press="opml" busyIndicatorDelay="50" busy="{data>/busyOPMLButton}" enabled="{data>/OPMLButtonEnabled}">
					<layoutData>
						<FlexItemData growFactor="1" baseSize="0"  />
					</layoutData>
				</Button>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<!-- <Button text="Accept" type="Accept" />
			<Button text="Reject" type="Reject" />
			<Button text="Edit" />
			<Button text="Delete" /> -->
			</OverflowToolbar>
		</footer>
	</Page>

</mvc:View>